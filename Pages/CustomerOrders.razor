@page "/my-orders"
@attribute [Authorize(Roles = "Customer")]

@using PickupExpressApp.Client.Models
@using PickupExpressApp.Client.Services
@inject IOrderService OrderService
@inject AuthenticationStateProvider AuthStateProvider

<h3 class="mb-3">My Orders</h3>

@if (isLoading)
{
    <p>Loading your orders...</p>
}
else if (!string.IsNullOrEmpty(error))
{
    <div class="alert alert-danger">@error</div>
}
else if (orders.Count == 0)
{
    <p>You have no orders yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var order in orders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>
                        <span class="badge bg-secondary">@order.Status</span>
                    </td>
                    <td>
                        @order.OrderItems?.Sum(i => i.Product.Price * i.Quantity).ToString("C")
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Order> orders = new();
    private bool isLoading = true;
    private string? error;
    private int userId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        var idClaim = user.FindFirst("sub") ?? user.FindFirst("id") ?? user.FindFirst("UserId");

        if (idClaim != null)
            userId = int.Parse(idClaim.Value);

        await LoadOrders();
    }

    private async Task LoadOrders()
    {
        try
        {
            isLoading = true;
            error = null;

            orders = await OrderService.GetOrdersByUserIdAsync(userId);

            orders = orders.OrderByDescending(o => o.OrderDate).ToList();
        }
        catch (Exception e)
        {
            error = $"Could not load your orders: {e.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
