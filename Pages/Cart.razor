@page "/cart"
@attribute [Authorize(Roles = "Customer")]

@using PickupExpressApp.Client.DTOs
@using PickupExpressApp.Client.Models
@using PickupExpressApp.Client.Services

@inject CartService CartService
@inject IProductService ProductService
@inject IOrderService OrderService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<h3 class="mb-4">Your Cart</h3>

<button class="btn btn-primary" @onclick="GoToCatalogue">Back to Products</button>

@if (isLoading)
{
    <p>Loading cart...</p>
}
else if (cart.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in cart)
            {
                var product = entry.Key;
                var quantity = entry.Value;

                <tr>
                    <td>@product.Name</td>
                    <td>@quantity</td>
                    <td>@((product.Price * quantity).ToString("C"))</td>
                    <td>
                        <button class="btn btn-danger btn-sm" @onclick="() => RemoveItem(product.ProductId)">
                            Remove
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* Grabs item price and multiplies by amount of item in cart *@
    <h4>Total: @cart.Sum(e => e.Key.Price * e.Value).ToString("C")</h4>

    <button class="btn btn-success" @onclick="PlaceOrder">
        Submit Order
    </button>
}

@code {
    private Dictionary<Product, int> cart = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadCart();
    }

    private async Task LoadCart()
    {
        isLoading = true;

        var storedCart = await CartService.GetCartAsync();
        cart.Clear();

        foreach (var entry in storedCart)
        {
            var product = await ProductService.GetProductByIdAsync(entry.Key);
            if (product != null)
            {
                cart[product] = entry.Value;
            }
        }

        isLoading = false;
    }

    private async Task RemoveItem(int productId)
    {
        await CartService.RemoveAsync(productId);
        await LoadCart();
    }

    private void GoToCatalogue()
    {
        Navigation.NavigateTo("/product-catalogue");
    }

    private async Task<int?> GetCustomerIdAsync()
    {
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = auth.User;

        string[] claimTypes = { "sub", "userid", "id" };

        var claim = claimTypes
            .Select(type => user.FindFirst(type))
            .FirstOrDefault(c => c != null);

        return claim != null ? int.Parse(claim.Value) : null;
    }

    private async Task PlaceOrder()
    {
        if (cart.Count == 0)
            return;

        var customerId = await GetCustomerIdAsync();
        if (customerId == null)
        {
            Console.WriteLine("Customer ID missing.");
            return;
        }

        var orderDto = new OrderCreateDto
        {
            CustomerId = customerId.Value,
            OrderDate = DateTime.UtcNow,
            OrderItems = cart.Select(e => new OrderItemCreateDto
            {
                ProductId = e.Key.ProductId,
                Quantity = e.Value
            }).ToList()
        };

        try
        {
            await OrderService.CreateOrderAsync(orderDto);
            await CartService.ClearCartAsync();
            await LoadCart();
        }
        catch (Exception e)
        {
            Console.WriteLine($"Order creation failed: {e.Message}");
        }
    }
}
